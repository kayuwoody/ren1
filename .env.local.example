# For local development when Codespaces is blocked
# Copy this to .env.local and run locally on your machine

# WooCommerce API
WC_CONSUMER_KEY=your_key_here
WC_CONSUMER_SECRET=your_secret_here
WC_API_URL=https://coffee-oasis.com.my/wp-json/wc/v3

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Receipt Domain (for QR codes on thermal receipts)
# Use subdomain while WordPress is on main domain: pos.coffee-oasis.com.my
# After WooCommerce sunset: coffee-oasis.com.my
NEXT_PUBLIC_RECEIPT_DOMAIN=coffee-oasis.com.my

# FTP Upload for Static Receipts
FTP_HOST=ftp.coffee-oasis.com.my
FTP_USER=your_ftp_username
FTP_PASSWORD=your_ftp_password
# Use FTP virtualized path (Hostinger FTP hides /home/u382463767/ prefix)
# This should match what you see when connecting via FTP client
FTP_RECEIPTS_PATH=/domains/coffee-oasis.com.my/public_html/receipts

# Fiuu Payment Gateway (Direct Integration)
# Get credentials from Fiuu Merchant Portal: https://merchant.fiuu.com
FIUU_MERCHANT_ID=your_merchant_id
FIUU_VERIFY_KEY=your_verify_key
FIUU_SECRET_KEY=your_secret_key
FIUU_SANDBOX_MODE=true  # Set to false for production

# Note: Register these callback URLs in your Fiuu portal:
# - Return URL: https://app.coffee-oasis.com.my/api/fiuu/return
# - Callback URL: https://app.coffee-oasis.com.my/api/fiuu/callback
# - Notify URL: https://app.coffee-oasis.com.my/api/fiuu/notify
